{
    "http": {
        "port": 8081,
        "host": "localhost",
        "static": "./public/"
    },
    "database": {
        "dialect": "mysql",
        "host": "localhost",
        "database": "database",
        "username": "user",
        "password": "password"
    },
    "secret": {
        "salt": "md5 secret CHANGEME",
        "token": "md5 secret CHANGEME",
        "download": "md5 secret CHANGEME"
    },
    "download": {
        "useServer": true, //true if we are using a dedicated webserver for files download
        "host": "localhost", //url generated will be like http[s]?://host:port/torrent.hash/TTLHash(expire+secret.download)/fileId/expiration/filePath
        "port": 80, //not required
        "ssl": false, 
        "dlBasepath": "lalal/lulu", //not required only used when useServer => true
        "streamBasepath": "lalal/lulu", //not required ( basepath for downloading transocded files )
        "hlsBasepath": "lalal/lulu" //base path for HLS playlist
    },
    "sessionExpiration": 240,
    "torrents": {
        "api": "transmission", //only one supported right now
        "host": "localhost",
        "port": 9091,
        "username": "username",
        "password": "password",
        "url": "/transmission/rpc"
    },
    "transcoder": {
        "enable": true, 
        "types": [ "avi", "mkv", "mp4", "mov", "mpg", "mpeg" ], //extension accepted for transcoding
        "maxSimult": 2, //max transcoding movie simultaneous 
        "output": "outputPath", //output for transcoded movies
        "webThumbPath": "/movies/thumb" //basepath for thumbnails in VTT playlist
    },
    "ffmpeg": {
        "preferredLang": "^fr.*", //regex for matching languages in subtitle & audio tracks
        "debug": true, //if debug => the movie will not be fully transcoded (only ~1 min)
        "thumbnails": { //thumb for preview
            "delay": 10, //take a thumb each 10s
            "size": "120x?" //thumb size
        },
        "qualities": [
            {
                "default": true, //reference configuration
                "name": "480p", //characters allowed [a-zA-Z0-9]
                "vcodec": "libx264",
                "vbitrate": 516096,
                "maxbitrate": 516096,
                "acodec": "libfaac",
                "abitrate": 98304,
                "channel": 2,
                "threads": 4,
                "width": 720,
                "height": 480,
                "preset": "slow"
            },
            {
                "name": "720p",
                "vcodec": "libx264",
                "vbitrate": 890880,
                "maxbitrate": 890880,
                "acodec": "libfaac",
                "abitrate": 131072,
                "channel": 2,
                "threads": 4,
                "width": 1280,
                "height": 720,
                "preset": "slow"
            },
            {
                "name": "1080p",
                "vcodec": "libx264",
                "vbitrate": 1884160,
                "maxbitrate": 1884160,
                "acodec": "libfaac",
                "abitrate": 163840,
                "channel": 2,
                "threads": 4,
                "width": 1920, 
                "height": 1080,
                "preset": "slow"
            }
        ]
    },
    "moviesdb":{
        "api": "allocine" //only one supported right now
    },
    "logs": {
        "logs": "./app/logs/logs.txt",
        "exceptions": "./app/logs/exceptions.txt"
    }
}
